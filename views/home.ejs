    <section id="profile">
        <div class="profile-page">
            <div class="left-container">
                <canvas id="eco-score" onload="getData(event)"></canvas>
            </div>
            <div class="right-container">
                <img id="profile-icon" src="../images/icons/user-icon.png">
                <div class="profile-info">
                </div>
