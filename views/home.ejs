    <section id="upload">
        <div class="page-title">
            <h1>Upload a File</h1>
        </div>
        <div class="upload-page">
            <div id="patrasMap"></div>
            <form id="dropFileForm" action="/upload" method="post" enctype="multipart/form-data" onsubmit="uploadFiles(event)">
                <input type="file" name="files" id="fileInput" multiple onchange="overrideDefault(event);addFiles(event);">
              
                <label for="fileInput" id="fileLabel" ondragover="overrideDefault(event);fileHover();" ondragenter="overrideDefault(event);fileHover();" 
                    ondragleave="overrideDefault(event);fileHoverEnd();" ondrop="overrideDefault(event);fileHoverEnd(); addFiles(event);" >
                    <img src="/images/icons/icons8-upload-document-100.png">
                    <br>
                    <span id="fileLabelText">
                        Choose a file or drag it here
                    </span>
                    <br>
                    <span id="uploadStatus"></span>
                </label>
            </form>
            <button id = "upload" type="submit" value="submit" form="dropFileForm" onclick="retriveRestrictedAreas();" class="uploadButton noselect">
                Upload
            </button>
        </div>
    </section>

